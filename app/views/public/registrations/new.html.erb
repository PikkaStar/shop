<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>



  <div class="field">
    名前
    (姓)<%= f.text_field :last_name, autofocus: true %>
    (名)<%= f.text_field :first_name %>
  </div>

  <div class="field">
    フリガナ
    (セイ)<%= f.text_field :last_name_kana %>
    (メイ)<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    メールアドレス
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    郵便番号(ハイフンなし)
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    住所
    <%= f.text_field :address, :size=>"50" %>
  </div>

  <div class="field">
    電話番号
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    パスワード(6文字以上)<%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード(確認用)<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<h3>すでに登録済みの方</h3>
<%= render "public/shared/links" %>
